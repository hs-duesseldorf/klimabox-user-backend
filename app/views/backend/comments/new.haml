.container
  = bootstrap_form_for @comment, url: backend_comments_path, method: :post do |f|
    .form-select
      = f.select :ticket_id, options_for_select((Ticket.all).map{|u| [u.message, u.id]}, f.object.ticket_id)
    .form-group
      = f.text_field :message, class: "form-control"


    = f.submit "Erstellen", class: "btn btn-primary float-right"