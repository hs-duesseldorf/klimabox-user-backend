.container
  = form_for @user, url: backend_user_path(@user), method: :patch do |f|
    .form-group
      = f.label :email
      = f.text_field :email, class: "form-control"
    .form-check
      = f.check_box :admin, class: "form-check-input"
      = f.label :admin

    = f.submit "Bearbeiten", class: "btn btn-primary float-right"